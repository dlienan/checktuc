<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

	<LinearLayout
	    android:id="@+id/linearLayout1"
	    android:layout_width="263dp"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >

		<TextView android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="@string/alumno_nombre_default"
			android:layout_width="wrap_content" android:id="@+id/alumnos_lista_nombre"></TextView>
		<TextView android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content" android:text="@string/alumno_numero_default" android:id="@+id/alumnos_lista_numero"></TextView>
	</LinearLayout>

	<ImageView
	    android:id="@+id/alumnos_lista_imagen"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_gravity="right"
	    android:layout_weight="0.0"
	    android:maxHeight="100dp"
	    android:src="@drawable/icon" >
</ImageView>

</LinearLayout>
